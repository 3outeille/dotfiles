{
    "configurations": {
        "Python: Run current script": {
            "adapter": "debugpy",
            "default": "true",
            "configuration": {
                "request": "launch",
                "type": "python",
                "program": "${file}",
                "args": [ "*${args:}" ],
                "justMyCode#json": "${justMyCode:true}",
                "breakpoints": {
                    "exception": {
                        "raised": "N",
                        "uncaught": "",
                        "userUnhandled": ""
                    }
                }
            }
        }
    }
}
